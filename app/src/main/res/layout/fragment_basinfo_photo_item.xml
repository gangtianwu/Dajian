<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fg_photo_item_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <View
            android:id="@+id/photo_item_v1"
            android:layout_width="87dp"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="26.5dp"
            android:layout_toLeftOf="@+id/fragment_baseinfo_photo_item_tv"
            android:background="@color/divide_line" />

        <TextView
            android:id="@+id/fragment_baseinfo_photo_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="4dp"
            android:text="营业执照"
            android:textColor="#999999"
            android:textSize="14sp" />

        <View
            android:id="@+id/photo_item_v2"
            android:layout_width="87dp"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26.5dp"
            android:layout_toRightOf="@+id/fragment_baseinfo_photo_item_tv"
            android:background="@color/divide_line" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp">
        <ImageView
            android:id="@+id/fragment_baseinfo_photo_item_iv"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="2dp"
            android:scaleType="fitXY"
            android:src="@mipmap/picture_fail" />

    </android.support.v7.widget.CardView>


</LinearLayout>