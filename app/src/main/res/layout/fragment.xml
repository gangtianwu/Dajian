<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/nodata_background">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/fg_todo_pb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp" />

    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/fg_todo_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/todo_fg_iv"
            android:layout_centerInParent="true"
            android:background="@mipmap/nodata_blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fg_mine_tv"
            android:textColor="#808080"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/todo_fg_iv"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您还没有待办的信息"
            android:textSize="18sp"
           />
    </RelativeLayout>


</LinearLayout>