<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/nodata_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="0.5dp"
            app:cardElevation="1dp"
          >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <View
                    android:background="@color/divide_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"/>
                <RelativeLayout
                    android:id="@+id/carrier_contact_ll"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/carrierfg_view1"
                        android:layout_width="2dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:background="#008AFF" />

                    <TextView
                        android:id="@+id/fragment_message_baseinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/carrierfg_view1"
                        android:gravity="center"
                        android:text="基础信息"
                        android:textColor="@color/mine_info_todo_text_process"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/carrier_contact_view2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/carrier_contact_ll"
                    android:background="@color/divide_line" />

                <ProgressBar
                    android:id="@+id/fg_apply_baseinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.RecyclerView
                    android:paddingLeft="15dp"
                    android:id="@+id/message_baseinfo_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="0.5dp"
            app:cardElevation="1dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <View
                    android:background="@color/divide_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"/>
                <RelativeLayout
                    android:id="@+id/carrier_contact_ll2"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/carrierfg_view1_1"
                        android:layout_width="2dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:background="#008AFF" />

                    <TextView
                        android:id="@+id/fragment_message_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/carrierfg_view1_1"
                        android:gravity="center"
                        android:text="货物信息"
                        android:textColor="@color/mine_info_todo_text_process"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/carrier_contact_view2_1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/carrier_contact_ll2"
                    android:background="@color/divide_line" />
                <ProgressBar
                    android:id="@+id/fg_apply_goods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.RecyclerView
                    android:paddingLeft="15dp"
                    android:id="@+id/message_goods_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="0.5dp"
            app:cardElevation="1dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <View
                    android:background="@color/divide_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"/>
                <RelativeLayout
                    android:id="@+id/carrier_contact_ll3"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/carrierfg_view1_2"
                        android:layout_width="2dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:background="#008AFF" />

                    <TextView
                        android:id="@+id/fragment_message_vehicle"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/carrierfg_view1_2"
                        android:gravity="center"
                        android:text="车辆信息"
                        android:textColor="@color/mine_info_todo_text_process"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/carrier_contact_view2_2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/carrier_contact_ll3"
                    android:background="@color/divide_line" />
                <ProgressBar
                    android:id="@+id/fg_apply_vehicle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.RecyclerView
                    android:paddingLeft="15dp"
                    android:id="@+id/message_vehicle_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="0.5dp"
            app:cardElevation="1dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <View
                    android:background="@color/divide_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"/>
                <RelativeLayout
                    android:id="@+id/carrier_contact_ll4"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/carrierfg_view1_4"
                        android:layout_width="2dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:background="#008AFF" />

                    <TextView
                        android:id="@+id/fragment_message_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/carrierfg_view1_4"
                        android:gravity="center"
                        android:text="相关证件"
                        android:textColor="@color/mine_info_todo_text_process"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/carrier_contact_view2_3"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/carrier_contact_ll4"
                    android:background="@color/divide_line" />
                <android.support.v7.widget.RecyclerView
                    android:background="@color/nodata_background"
                    android:id="@+id/message_photo_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>