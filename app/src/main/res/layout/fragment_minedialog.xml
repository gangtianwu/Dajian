<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/myfragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffd2d2d2" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/fragment_my_test_tv"
                android:background="#FFFFFF"
                android:textColor="#FFFFFF"
                android:padding="5dp"
                android:textSize="18sp"
                android:gravity="center"
                android:text="待办"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:background="#FFFFFF"
                android:textColor="#FFFFFF"
                android:padding="5dp"
                android:textSize="18sp"
                android:gravity="center"
                android:text="待办"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:background="#FFFFFF"
                android:textColor="#FFFFFF"
                android:padding="5dp"
                android:textSize="18sp"
                android:gravity="center"
                android:text="待办"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/activity_main_rg_group"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/activity_main_information"
                style="@style/BottomTabStyle"
                android:checked="true"
                android:text="待办" />

            <RadioButton
                android:id="@+id/activity_main_routeline"
                style="@style/BottomTabStyle"
                android:text="已办" />

            <RadioButton
                android:id="@+id/activity_main_vehicle"
                style="@style/BottomTabStyle"
                android:text="消息" />
        </RadioGroup>

    </FrameLayout>
</LinearLayout>