<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mine_activity_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/mine_activity_tv_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="省级协调员"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/title_background" />

    <FrameLayout
        android:id="@+id/mine_activity_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F2F2F2">

    </FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/title_background" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            <TextView
                android:textColor="#00000000"
                android:id="@+id/activity_mine_my_test_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="待办"
                android:background="#00000000"
                android:textSize="24sp" />
            </RelativeLayout>

            <TextView
                android:textColor="#00000000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="待办"
                android:background="#00000000"
                android:textSize="18sp" />

            <TextView
                android:textColor="#00000000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="待办"
                android:background="#00000000"
                android:textSize="18sp" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/activity_mine_rg_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton

                android:id="@+id/activity_mine_information"
                style="@style/BottomTabStyle"
                android:drawableTop="@drawable/mine_info_selector"
                android:checked="true"
                android:text="待办" />

            <RadioButton
                android:drawableTop="@drawable/mine_info_selector_done"
                android:id="@+id/activity_mine_routeline"
                style="@style/BottomTabStyle"
                android:text="已办" />

            <RadioButton
                android:drawableTop="@drawable/mine_info_selector_message"
                android:id="@+id/activity_mine_vehicle"
                style="@style/BottomTabStyle"
                android:text="消息" />
        </RadioGroup>

    </FrameLayout>
</LinearLayout>